#include <stdio.h>
#define CE_SERIAL_IMPLEMENTATION
#include "serial.h"
using namespace std;

int main()
{
#ifdef CE_WINDOWS
	Serial com("\\\\.\\COM7",9600,8,'N',1); // Windows
#else
	Serial com("/dev/ttyUSB0",9600,8,'N',1); // Linux
#endif

	printf("Opening port %s.\n",com.getPortName().c_str());
	if (com.Open() == 0) {
		printf("OK.\n");
	}
	else {
		printf("Error.\n");
		return 1;
	}

	bool successFlag;
	printf("Writing.\n");
	char s[]="ON";
	successFlag=com.Write("ON", 2); // write string
	//successFlag=com.Write("!", 1); // write a character

	printf("Waiting 3 seconds.\n");
	com.Delay(5); // delay to wait for a character

	printf("Reading.\n");
	std::vector<char> input = com.Read(40, successFlag); // read 40 characters
for (char c : input) {
    std::cout << c ;
}

	//if(successFlag) printf("Rx: %c\n",c);

	printf("Closing port %s.\n",com.getPortName().c_str());
	com.Close();
	return 0;
}
